{
  "name": "arweave-archive-cli",
  "version": "0.0.6",
  "description": "A CLI tool to archive webpage and it's screenshot to Arweave.",
  "author": "Pawan Paudel <pawanpaudel93@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/pawanpaudel93",
  "homepage": "https://github.com/pawanpaudel93/arweave-archive-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawanpaudel93/arweave-archive-cli.git"
  },
  "bugs": "https://github.com/pawanpaudel93/arweave-archive-cli/issues",
  "keywords": [
    "web3",
    "arweave-archive-cli",
    "arweave",
    "bundlr"
  ],
  "sideEffects": false,
  "bin": {
    "arweave-archive": "./dist/index.mjs",
    "aar": "./dist/index.mjs"
  },
  "files": [
    "dist",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard doc:html version doc:publish",
    "publish": "run-s build && git push --follow-tags origin main && npm publish"
  },
  "dependencies": {
    "arweave-archive": "^0.0.9",
    "commander": "^9.5.0",
    "conf": "^10.2.0",
    "lokijs-promise": "^1.0.4",
    "prompts": "^2.4.2",
    "tslog": "^3.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@antfu/ni": "^0.21.4",
    "@antfu/utils": "^0.7.4",
    "@types/prompts": "^2.4.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "gh-pages": "^3.2.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "standard-version": "^9.5.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.9.5",
    "unbuild": "^1.2.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
